<Page x:Class="CarServices.View.Pages.AddEditServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarServices.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditServicePage">

    <Grid>
        <StackPanel Background="White">
            <TextBlock >Название</TextBlock>
            <TextBox Background="LightGray" x:Name="TBoxTitle"></TextBox>
            <TextBlock >Описание</TextBlock>
            <TextBox Background="LightGray" x:Name="TBoxDescription"></TextBox>
            <TextBlock >Продолжительность</TextBlock>
            <TextBox Background="LightGray" x:Name="TBoxDuration"></TextBox>
            <TextBlock >Цена</TextBlock>
            <TextBox Background="LightGray" x:Name="TBoxCost">.Руб</TextBox>
             <TextBlock >Скидка</TextBlock>
            <TextBox Background="LightGray" x:Name="TBoxDiscount">.Руб</TextBox>
            <TextBlock >Изображение</TextBlock>
            <Image x:Name="ImageService" ></Image>
            <Button x:Name="knop" Click="Button_Click">Выбрать</Button>
            <Button x:Name="Save" Click="Save_Click">Сохранить</Button>
        </StackPanel>
        
    </Grid>
</Page>
